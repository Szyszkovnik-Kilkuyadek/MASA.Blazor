<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Masa.Blazor.MAUI.AudioPlayerSample"
             xmlns:audioPlayerSample="clr-namespace:Masa.Maui.Plugin.AudioPlayerSample"
             x:Class="Masa.Blazor.MAUI.AudioPlayerSample.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <BlazorWebView HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type audioPlayerSample:Main}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>